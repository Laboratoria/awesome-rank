.title-summary{
	color: $amar;
}

.col-info{
	margin-left: 80px;
}

.background-soft{
	width: 100%;
	height: 10vh;
	background-color: $amar;
	border-radius: 2px;
	margin-bottom: -1;
	box-shadow: 0px 0px 12px -4px rgba(0,0,0,0.75);
}

.row .col.s8 {
    width: 66.6666666667%;
    margin-left: auto;
    left: 22px;
    right: auto;
    padding-left: 30px;
}
@media only screen and (max-width : 480px){
	.personal-info{
		margin-left: 4rem;
	}
}


@media screen and (min-width: 601px) and (max-width: 1400px) {
	.image{
		margin-left: 5rem;
	}
}

.top{
	color: $grosc;
	margin-top: 1.2rem;
	margin-left: 1rem;
}

.number{
	color: $wh;
	margin-right: 1rem;
}

/*----*/
.container .s-m{
	margin-left: auto;
	margin-right: auto;
}

.image-profile {

	img {
		border-radius: 50%;
	    width: 100px;
	    height: 100px;
	    margin-top: 10px;
	    margin-bottom: 5px;
	}
}

.ranking{
	h6 {
		border-bottom: 1px solid black;
		margin: 2em 0;
		padding-bottom: 0.5em;
	}
}
.data{
	h5 {
		font-weight: bold;
		color: $amar;
	}
	h6 {
		font-weight: bold;
		color: black;
	}
	p {
		margin: 0;
	}
}
.rank-point{
	width: 90%;

	.div-points{
		background-color: #3E3F40;
		color: $amar;
		font-size: 30px;
		padding: 10px 0;
		text-align: center;
	}
	p {
		text-align: center;
		margin-top: 5px;
	}
}

.left {
	text-align : left;
}

.right {
	text-align : right;
}