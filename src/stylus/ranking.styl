.title-summary{
	color: $amar;
}

.col-info{
	margin-left: 80px;
}

.background-soft{
	width: 100%;
	height: 10vh;
	background-color: $amar;
	border-radius: 2px;
	margin-bottom: -1;
	box-shadow: 0px 0px 12px -4px rgba(0,0,0,0.75);
}

.row .col.s8 {
    width: 66.6666666667%;
    margin-left: auto;
    left: 22px;
    right: auto;
    padding-left: 30px;
}
@media only screen and (max-width : 480px){
	.background-soft{
		margin-bottom: -6%;
	}
	.image{
		margin-left: 11rem;
	}
	.personal-info{
		margin-left: 4rem;
	}
}

@media screen and (max-width: 600px) {
	.background-soft{
		margin-bottom: -4%;
	}
	.image{
		margin-left: 1rem;
	}
}

@media screen and (min-width: 601px) and (max-width: 1400px) {
	.background-soft{
		margin-bottom: -1%;
	}
	.image{
		margin-left: 5rem;
	}
}

.top{
	color: $grosc;
	margin-top: 1.2rem;
	margin-left: 1rem;
}

.number{
	color: $wh;
	margin-right: 1rem;
}